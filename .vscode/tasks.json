{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "[LINUX][DEBUG][BUILLD][tests]",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "Build-Linux",
                "--config",
                "DEBUG",
                "-j16",
                "--target",
                "tests"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": "[LINUX][CMAKE][CREATE][DEBUG]"
        },
        {
            "label": "[LINUX][CMAKE][CREATE][DEBUG]",
            "type": "shell",
            "command": "cmake -S . -B Build-Linux -DCMAKE_BUILD_TYPE=Debug",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "[WINDOWS][CMAKE][CREATE][DEBUG]",
            "type": "shell",
            "command": "cmake -S . -B Build-Windows -DCMAKE_BUILD_TYPE=Debug",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}